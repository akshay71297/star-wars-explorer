{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@service/*": [
        "src/app/shared/service/*"
      ],
      "@directive/*": [
        "src/app/shared/directives/*"
      ],
      "@model/*": [
        "src/app/shared/models/*"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@component/*": [
        "src/app/shared/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
